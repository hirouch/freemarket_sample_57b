= render "shared/header"

.ichi__exhibit
  .ichi__exhibit__own
    .ichi__exhibit__own__title
      = @item.name
    .ichi__exhibit__own__item
      .ichi__exhibit__own__item__images
        .ichi__exhibit__own__item__images__top
          = image_tag @item.item_images[0].image, class: "ichi__exhibit__show__top__image"
        .ichi__exhibit__own__item__images__others
          .ichi__exhibit__own__item__images__others__image
            = image_tag @item.item_images[0].image, class: "ichi__exhibit__show__images"
          .ichi__exhibit__own__item__images__others__image
          .ichi__exhibit__own__item__images__others__image
          .ichi__exhibit__own__item__images__others__image
          .ichi__exhibit__own__item__images__others__image
          .ichi__exhibit__own__item__images__others__image
          .ichi__exhibit__own__item__images__others__image
          .ichi__exhibit__own__item__images__others__image
          .ichi__exhibit__own__item__images__others__image
          .ichi__exhibit__own__item__images__others__image
      .ichi__exhibit__own__item__description
        .ichi__exhibit__own__item__description__text
          .ichi__exhibit__own__item__description__text__left
            出品者
          .ichi__exhibit__own__item__description__text__right
            .ichi__exhibit__own__item__description__text__right__name
              = link_to items_path, class: "link_to" do
                = @user.nickname
            .ichi__exhibit__own__item__description__text__right__evaluation
              .ichi__exhibit__own__item__description__text__right__evaluation__icon
                = fa_icon 'thumbs-up', class: "ichi__evaluation__icon"
              .ichi__exhibit__own__item__description__text__right__evaluation__point
                100 
              .ichi__exhibit__own__item__description__text__right__evaluation__icon
                = fa_icon 'thumbs-up', class: "ichi__evaluation__icon"
              .ichi__exhibit__own__item__description__text__right__evaluation__point
                100
              .ichi__exhibit__own__item__description__text__right__evaluation__icon
                = fa_icon 'thumbs-up', class: "ichi__evaluation__icon"
              .ichi__exhibit__own__item__description__text__right__evaluation__lastpoint
                100
        .ichi__exhibit__own__item__description__text
          .ichi__exhibit__own__item__description__text__left
            カテゴリー
          .ichi__exhibit__own__item__description__text__right
            .ichi__exhibit__own__item__description__text__right__category
              = link_to items_path, class: "link_to" do
                = @item.category.root.name
            .ichi__exhibit__own__item__description__text__right__category
              = link_to items_path, class: "link_to" do
                >
                = @item.category.parent.name
            .ichi__exhibit__own__item__description__text__right__category
              = link_to items_path, class: "link_to" do
                >
                = @item.category.name
        .ichi__exhibit__own__item__description__text
          .ichi__exhibit__own__item__description__text__left
            ブランド
          .ichi__exhibit__own__item__description__text__right
            = link_to items_path, class: "link_to" do
              = @item.brand
        .ichi__exhibit__own__item__description__text
          .ichi__exhibit__own__item__description__text__left
            商品のサイズ
          .ichi__exhibit__own__item__description__text__right
            = @item.size
        .ichi__exhibit__own__item__description__text
          .ichi__exhibit__own__item__description__text__left
            商品の状態
          .ichi__exhibit__own__item__description__text__right
            = @item.status_i18n
        .ichi__exhibit__own__item__description__text
          .ichi__exhibit__own__item__description__text__left
            配送料の負担
          .ichi__exhibit__own__item__description__text__right
            = @item.delivery_cost_i18n
        .ichi__exhibit__own__item__description__text
          .ichi__exhibit__own__item__description__text__left
            配送の方法
          .ichi__exhibit__own__item__description__text__right
            = @item.delivery_way_i18n
        .ichi__exhibit__own__item__description__text
          .ichi__exhibit__own__item__description__text__left
            配送元地域
          .ichi__exhibit__own__item__description__text__right
            = link_to items_path, class: "link_to" do
              = @item.prefecture.name
        .ichi__exhibit__own__item__description__text
          .ichi__exhibit__own__item__description__text__left
            発送日の目安
          .ichi__exhibit__own__item__description__text__right
            = @item.delivery_date_i18n
    .ichi__exhibit__own__price
      .ichi__exhibit__own__price__left
        ¥
        = @item.price.to_s(:delimited, delimiter: ',')
      .ichi__exhibit__own__price__center
        （税込）
      .ichi__exhibit__own__price__right
        送料込み
    .ichi__exhibit__own__purchase
      = link_to items_path, class: "link_to_buy" do
        購入画面に進む
    .ichi__exhibit__own__text
      = @item.description

    .ichi__exhibit__own__contents
      .ichi__exhibit__own__contents__left
        .ichi__exhibit__own__contents__left__evaluation
          .ichi__exhibit__own__contents__left__evaluation__icon
            =fa_icon 'heart'
          .ichi__exhibit__own__contents__left__evaluation__good
            いいね!
          .ichi__exhibit__own__contents__left__evaluation__point
            150
        .ichi__exhibit__own__contents__left__report
          .ichi__exhibit__own__contents__left__report__icon
            =fa_icon 'flag'
          .ichi__exhibit__own__contents__left__report__text
            不適切な商品の報告
      .ichi__exhibit__own__contents__right
        .ichi__exhibit__own__contents__right__icon
          =fa_icon 'lock'
        .ichi__exhibit__own__contents__right__text
          あんしん・あんぜんへの取り組み

  .ichi__exhibit__two
    .ichi__exhibit__two__text
      相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
    .ichi__exhibit__two__input
      %textarea{type: "text", name: "message", class: "ichi__exhibit__message"}
    .ichi__exhibit__two__submit
      %button{type: "submit", class: "ichi__exhibit__submit"}
        コメントする
  .ichi__exhibit__three
    .ichi__exhibit__three__left
      .ichi__exhibit__three__left__icon
        =fa_icon 'chevron-left'
      .ichi__exhibit__three__left__item
        テストアイテム①
    .ichi__exhibit__three__right
      .ichi__exhibit__three__right__item
        テストアイテム②
      .ichi__exhibit__three__right__icon
        =fa_icon 'chevron-right'
  .ichi__exhibit__four
    .ichi__exhibit__four__icon
      =fa_icon 'facebook-square',class: "ichi__exhibit__icon__facebook"
    .ichi__exhibit__four__icon
      =fa_icon 'twitter-square',class: "ichi__exhibit__four__icon__twitter"
    .ichi__exhibit__four__icon
      =fa_icon 'pinterest-square',class: "ichi__exhibit__four__icon__pinterest"
  .ichi__exhibit__five
    .ichi__exhibit__five__name
      = link_to items_path, class: "link_to" do
        = @user.nickname
        さんのその他の出品
    .ichi__exhibit__five__items
    -@selleritems.each do |item|
      = link_to item_path(item) do
        .ichi__exhibit__five__items__item
          .ichi__exhibit__five__items__item__image
            =image_tag item.item_images[0].image, class: "ichi__exhibit__five__image"
          .ichi__exhibit__five__items__item__text
            .ichi__exhibit__five__items__item__text__top
              = item.name
            .ichi__exhibit__five__items__item__text__bottom
              .ichi__exhibit__five__items__item__text__bottom__left
                = item.price.to_s(:delimited, delimiter: ',')
              .ichi__exhibit__five__items__item__text__bottom__right
                .ichi__exhibit__five__items__item__text__bottom__right__icon
                  =fa_icon 'heart'
                .ichi__exhibit__five__items__item__text__bottom__right__point
                  100
      
  
  .ichi__exhibit__five
    .ichi__exhibit__five__name
      = link_to items_path, class: "link_to" do
        = @item.brand
        のその他の商品
    .ichi__exhibit__five__items
    -@branditems.each do |item|
      = link_to item_path(item) do
        .ichi__exhibit__five__items__item
          .ichi__exhibit__five__items__item__image
            =image_tag item.item_images[0].image, class: "ichi__exhibit__five__image"
          .ichi__exhibit__five__items__item__text
            .ichi__exhibit__five__items__item__text__top
              = item.name
            .ichi__exhibit__five__items__item__text__bottom
              .ichi__exhibit__five__items__item__text__bottom__left
                = item.price.to_s(:delimited, delimiter: ',')
              .ichi__exhibit__five__items__item__text__bottom__right
                .ichi__exhibit__five__items__item__text__bottom__right__icon
                  =fa_icon 'heart'
                .ichi__exhibit__five__items__item__text__bottom__right__point
                  100
        
  
  .ichi__exhibit__six
    .ichi__exhibit__six__box
      .ichi__exhibit__six__box__mercari
        メルカリ
      .ichi__exhibit__six__box__icon
        =fa_icon 'chevron-right', class: "ichi__exhibit__six__icon"
      .ichi__exhibit__six__box__item
        テストテスト


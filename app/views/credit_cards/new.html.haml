= render "shared/header"
.kawa-wrapper
  .kawa-container
    = render "shared/side-bar"
    .haya-cre-main
      %section.haya-cre__main__1
        = form_tag(pay_credit_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
          .haya-single-main__container__registration
            お支払い方法
          .haya-cre-from
            .haya-field
              %label :カード番号
              %spa.haya-field__hissu 必須
              %br/
              = text_field_tag "number", "", class: "haya-input", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              %ul.haya-signup-card-list
                %li.haya-cre-image
                  %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2394192159", :width => "49"}/
                %li.haya-cre-image
                  %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2394192159", :width => "34"}/
                %li.haya-cre-image
                  %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2394192159", :width => "30"}/
                %li.haya-cre-image
                  %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2394192159", :width => "32"}/
                %li.haya-cre-image
                  %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2394192159", :width => "21"}/
                %li.haya-cre-image
                  %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2394192159", :width => "32"}/
                %li.haya-cre-image
                  %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2394192159", :width => "32"}/
                .haya-field-cre
                  %label :生年月日
                  %spa.haya-field__hissu 必須
                  .haya-cre-select
                    .select-wrap.half
                      %select#exp_month.hayaselect-default{name: "exp_month", type: "text"}
                        %option{value: ""} --
                        %option{value: "1"}01
                        %option{value: "2"}02
                        %option{value: "3"}03
                        %option{value: "4"}04
                        %option{value: "5"}05
                        %option{value: "6"}06
                        %option{value: "7"}07
                        %option{value: "8"}08
                        %option{value: "9"}09
                        %option{value: "10"}10
                        %option{value: "11"}11
                        %option{value: "12"}12
                      %i.icon-arrow-bottom
                      %span 月
                    .select-wrap.half
                      %select#exp_year.hayaselect-default{name: "exp_year", type: "text"}
                        %option{value: ""} --
                        %option{value: "2019"}19
                        %option{value: "2020"}20
                        %option{value: "2021"}21
                        %option{value: "2022"}22
                        %option{value: "2023"}23
                        %option{value: "2024"}24
                        %option{value: "2025"}25
                        %option{value: "2026"}26
                        %option{value: "2027"}27
                        %option{value: "2028"}28
                        %option{value: "2029"}29
                      %i.icon-arrow-bottom
                      %span 年
              .haya-field
                %label :セキリティーコード
                %spa.haya-field__hissu 必須
                %br/
                = text_field_tag "cvc", "", class: "haya-input", placeholder: "カード背面４桁もしくは３桁の番号", maxlength: "4", id: "cvc"
              .haya-field
                #card_token
                  = submit_tag "次に進む", id: "token_submit", class:"hayabtn-1"
= render "shared/footertop"
= render "shared/footer"



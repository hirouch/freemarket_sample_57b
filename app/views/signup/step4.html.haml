.haya-cre-main
  .haya-header
    .haya-header__logo
      =image_tag src="user-header-logo.svg"
    %nav.progress
      %ul.progress-bar
        %li.through#through
          会員情報
          .progress-status
          .progress-status_bar__1
        %li.haya-through-1
          電話番号認証
          .progress-status__2
          .progress-status_bar__1
        %li.haya-through-1
          お届け先住所入力
          .progress-status__2
          .progress-status_bar__1
        %li.haya-through-1
          支払い方法
          .progress-status__2
          .progress-status_bar__3
        %li.end#end
          完了
          .progress-status
          .progress-status_bar
  .haya-cre__main
    %section.haya-cre__main__1
      .haya-single-main__container__registration
        お支払い方法
      .haya-cre-from
        .haya-field
          %label :カード番号
          %spa.haya-field__hissu 必須
          %br/
          %input.haya-input 半角数字のみ 
          -# = f.text_field :email, class: "haya-input", :placeholder => "半角数字のみ"
          %ul.haya-signup-card-list
            %li.haya-cre-image
              %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2394192159", :width => "49"}/
            %li.haya-cre-image
              %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2394192159", :width => "34"}/
            %li.haya-cre-image
              %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2394192159", :width => "30"}/
            %li.haya-cre-image
              %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2394192159", :width => "32"}/
            %li.haya-cre-image
              %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2394192159", :width => "21"}/
            %li.haya-cre-image
              %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2394192159", :width => "32"}/
            %li.haya-cre-image
              %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2394192159", :width => "32"}/
            .haya-field-cre
              %label :生年月日
              %spa.haya-field__hissu 必須
              .haya-cre-select
                .select-wrap.half
                  %select#payment_card_expire_mm.hayaselect-default
